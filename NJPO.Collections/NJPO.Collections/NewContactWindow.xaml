<Window x:Class="NJPO.Collections.NewContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NJPO.Collections"
        mc:Ignorable="d"
        Title="NewContactWindow" Height="250" Width="430">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Margin="10">
            <Label Content="Imię:" />
            <TextBox x:Name="nameBox" Width="400" HorizontalAlignment="Left" />
            <Label Content="Nazwisko:" />
            <TextBox x:Name="surnameBox" Width="400" HorizontalAlignment="Left" />
            <Label Content="Telefon:" />
            <TextBox x:Name="phoneBox" Width="400" HorizontalAlignment="Left" />
        </StackPanel>
        <Button Grid.Row="1" Content="Zamknij" Width="100" HorizontalAlignment="Right" Margin="5" IsDefault="True" Click="defaultButton_Click" />
    </Grid>
</Window>
